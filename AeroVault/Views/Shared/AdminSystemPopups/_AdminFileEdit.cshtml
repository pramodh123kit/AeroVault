@page
@model AeroVault.Views.Shared.AdminSystemPopups._AdminFileEditModel
@{
}

<div class="modal-notification-edit" id="editfile-popup" style="display: none;">
    <input type="hidden" id="file-id-to-edit" />
    <div class="modal-header">
        <h2>Edit Maintenance Procedure Overview</h2> <!-- This will be updated by JavaScript -->
        <img src="~/Content/Assets/close-icon.svg" id="close-icon5" />
    </div>
    <div class="modal-body">
        <label for="file-name">File Name</label>
        <input type="text" id="file-name" value="" /> 
        <label for="category">Select Category</label>
        <select id="category">
            <option value="Training">Training</option>
            <option value="Technical">Technical</option>
        </select>
    </div>
    <div class="modal-footer" style="border:none; padding:0px;">
        <button class="reset-btn-file-edit" style="border: 1px solid #013656; margin-right: 20px;">Reset</button>
        <button class="save-btn-file-edit" disabled>Save Changes</button>
    </div>
</div>