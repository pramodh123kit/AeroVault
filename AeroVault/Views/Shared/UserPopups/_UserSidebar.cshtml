@page
@model AeroVault.Views.Shared.UserPopups._UserSidebarModel
@{
}

<style>

    .modal-notification-edit4 {
        background-color: white;
        border-radius: 8px;
        width: 250px; /* Fixed width */

        height: 100%; /* Full height */

        position: fixed; /* Fixed positioning */

        top: 50%; /* Align to the top */

        left: 25.8%; /* Align to the left */

        z-index: 1001; /* Ensure it appears above other content */

        overflow: hidden; /* Hide overflow */
    }


    .modal-header4 {
        background-color: #00436C;
        height: 5px;
        color: white;
        position: relative;
    }


        .modal-header4 h2 {
            margin: 0;
            font-size: 18px;
            color: white;
        }


    .modal-body4 {
        padding: 0px;
        padding-top: 15px;
        text-align: center;
        border-bottom: 1px solid #BCBBBB;
        width: 90%;
        margin: 0 auto;
    }


        .modal-body4 h2 {
            font-weight: bold;
            font-size: 32px;
        }


    .modal-footer4 {
        display: flex;
        justify-content: center;
        padding: 0px;
        border: none;
        margin-bottom: 15px;
        margin-right: 20px;
    }


        .modal-footer4 button {
            background-color: #00436C;
            border: none;
            border-radius: 10px;
            color: white;
            cursor: pointer;
            font-size: 16px;
            width: 120px;
            padding: 5px 18px;
        }


            .modal-footer4 button.reset-btn2 {
                background-color: transparent;
                border: none;
                color: black;
            }


            .modal-footer4 button + button {
                margin-left: 5px;
            }


    .save-btn2 {
        margin: 0px;
    }


    .reset-btn2 {
        margin: 0px;
    }

</style>


<div class="modal-notification-edit4" id="editfile-popup7" style="display: none;">


    <div class="modal-header4" style="height:10px; padding:0;">
    </div>


    <div class="modal-body4">

        <h2 class="admin-logout-header">Confirm Logout</h2>

    </div>



    <p style="text-align:center; margin-top:15px;">Are you sure you want to log out?</p>


    <div class="modal-footer4">

        <button class="reset-btn2" id="close-logout7">Cancel</button>

        <button type="button" class="save-btn2" onclick="logout()">Logout</button>

    </div>


</div>


<script>

    function logout() {

        window.location.href = '@Url.Action("LoginPage", "Login")';

    }

</script>