@{
    ViewData["Title"] = "Login Page";
    ViewData["HideNavBar"] = true;
}

<html>
<head>
    <title>
        AeroVault - Login Page
    </title>
    <link rel="stylesheet" href=~/Content/css/Login.css />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @if (TempData["ErrorMessage"] != null)
    {
        <script data-error-message="@TempData["ErrorMessage"]"></script>
        <script>
            console.log("Error message from TempData: ", "@TempData["ErrorMessage"]");
        </script>
    }
</head>
<body>

    <div id="loading-screen" class="loading-screen" style="display: none;">
        <img src="~/Content/Assets/AeroVault-Logo.svg" alt="Loading..." class="loading-icon" />
        <p>Loading, please wait...</p>
        <div class="loading-dots">
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
    </div>


    <div class="container2">
        <div class="OuterLoginBox">
            <div class="login-box">
                <img src="~/Content/Assets/LogoWithText.svg" class="LogoWithT" />
                <div class="LoginHere">
                    <span>
                        Login Here
                    </span>
                </div>            
                  @*   <input id="username" name="staffNo" placeholder="Staff ID" type="text" class="errorinput" autocomplete="off" value="" />
                    <div id="error"></div>
                    <input id="password" name="password" placeholder="Password" type="password" class="errorinput" autocomplete="off" value="" />
                    <div id="error2"></div> *@

                   @*  <button type="submit" id="submit">
                        Login
                    </button> *@

                <div class="input-field-set">
                    <div class="mt-2 mb-3">
                        <label for="basic-url" class="form-label">Enter Username</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Username" id="txtStaffNo">
                        </div>
                    </div>
                </div>
                <div class="input-field-set">
                    <div class="mb-3">
                        <label for="basic-url" class="form-label">Enter Password</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input type="password" class="form-control" placeholder="Password" id="txtPassword">
                            <span class="input-group-text toggle-password">
                                <i class="bi bi-eye-slash"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <button class="btn btn-signIn form-control mt-2" id="btnSignIn">Sign In</button>
                <div class="footer">
                    <img class="SLLogo2" src="~/Content/Assets/SLLogo.svg" />
                    <p>
                        © 2025 SriLankan IT Systems. All Rights Reserved.
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    }

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
    <script src="~/Scripts/ProjectScripts/notiflix.js"></script>
    <link href="~/Content/css/ProjectStyles/notiflix.css" rel="stylesheet" />
   
</body>
</html>