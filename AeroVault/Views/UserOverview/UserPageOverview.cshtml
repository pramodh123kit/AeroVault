@{
    ViewData["Title"] = "User Overview";
    ViewData["CustomNavbar"] = true;
    ViewData["UserHeader"] = true;
    ViewData["IsDashboardActive"] = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/UserOverview.css" />
</head>
<body>
    <!-- Banner Section -->
    <div class="banner-container">
        <img src="~/Assets/banner-new3.svg" alt="Banner" class="user-banner" />
        <div class="banner-content">
            <h1>Welcome to AeroVault</h1>
            <p>Your IT Hub for Systems and File Management</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-6">
                <!-- User Info Card -->
                <div class="user-info-card">
                    <h2>Rusith Manorathna</h2>
                    <p>Information Technology</p>
                </div>

                <!-- Progress Section -->
                <div class="progress-section mt-4">
                    <h3>Your Progress</h3>
                    <div class="form-group mb-3">
                        <select class="form-select" id="systemSelect">
                            <option selected>All</option>
                            <option >AeroDocs</option>
                            <option >Charika</option>
                            <option >GovTra</option>
                            <option >AeroLetters</option>
                            <option >EasyPass</option>
                            <option >FIDS</option>
                        </select>
                    </div>
                    <div class="chart-container">
                        <canvas id="progressChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-6">
                <!-- Statistics Cards -->
                <div class="row stats-cards">
                    <div class="col-md-4">
                        <div class="stat-card systems">
                            <div class="stat-number">20</div>
                            <img src="~/Assets/systemcard.svg" alt="Systems" class="stat-icon">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card documents">
                            <div class="stat-number">150</div>
                            <img src="~/Assets/documentscard .svg" alt="Documents" class="stat-icon">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card videos">
                            <div class="stat-number">150</div>
                            <img src="~/Assets/videoscard.svg" alt="Videos" class="stat-icon">
                        </div>
                    </div>
                </div>

                <!-- Recently Added Files -->
                <div class="recent-files mt-4">
                    <h3>Recently Added Files</h3>
                    <div class="file-list">
                        <div class="file-item">
                            <img src="~/Assets/file-icon.svg" alt="File" class="file-icon">
                            <div class="file-info">
                                <span class="file-name">Aircraft Maintenance Checklist</span>
                                <span class="system-name">Charika</span>
                            </div>
                            <span class="file-date">Mar 4, 2024</span>
                        </div>
                        <!-- More file items -->
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/userOverview.js"></script>
</body>
</html>