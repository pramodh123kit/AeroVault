        .read-by-unique {
            color: green;
            cursor: pointer;
            position: relative;
            text-decoration: underline;
            text-decoration-color: green;
        }

            .read-by-unique .clickable-icon-unique {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                display: none;
            }

            .read-by-unique:hover .clickable-icon-unique {
