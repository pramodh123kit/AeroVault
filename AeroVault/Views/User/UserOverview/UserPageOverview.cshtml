<body>
    <div class="banner-content">
        <h1>Welcome to AeroVault</h1>
        <p>Your IT Hub for Systems and File Management</p>
    </div>

    <!-- Main Content -->
    <div class="main-container">
        <!-- Left Column -->
        <div class="left-column">
            <!-- User Info Card -->
            <div class="user-info-card">
                <h2>Rusith Manorathna</h2>
                <p>Information Technology</p>
            </div>
         
            <!-- Progress Section -->
            <div class="progress-section">
                <h3>Your Progress</h3>

                <div class="custom-form-group">
                    <label class="custom-label" for="custom-selector">Select System</label>
                    <div class="custom-dropdown">
                        <div class="custom-dropdown-toggle custom-selector" onclick="toggleCustomDropdown()">
                            <span id="selected-option">All</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="custom-dropdown-content">
                            <div class="custom-search-container">
                                <img src="/Content/Assets/search-icon.svg" alt="Search Icon" />
                                <input type="text" id="custom-search-input" placeholder="Search System" onkeyup="filterCustomOptions()" onclick="event.stopPropagation()">
                            </div>
                            <div class="custom-dropdown-list">
                                <div onclick="selectCustomOption(this)" class="active">All</div>
                                <div onclick="selectCustomOption(this)">Charika</div>
                                <div onclick="selectCustomOption(this)">AeroDocs</div>
                                <div onclick="selectCustomOption(this)">EasyPass</div>
                                <div onclick="selectCustomOption(this)">AeroLetters</div>
                                <div onclick="selectCustomOption(this)">AMOS</div>
                                <div onclick="selectCustomOption(this)">Qbank</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="chart-wrapper">
                    <div class="chart-container">
                        <canvas id="progressChart" width="200" height="200"></canvas>
                    </div>
                    <div class="chart-legend">
                        <div class="legend-item">
                            <span class="legend-color" style="background: #2a5298;"></span>
                            <span class="legend-text">Read File Count</span></span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #f5f5f5;"></span>
                            <span class="legend-text">Pending File Count</span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="right-column">
            <!-- Statistics Cards -->
            <div class="Cards">
                <div class="Card">
                    <img src="/Content/Assets/systemiconsvg1.svg" />
                    <h1 class="card-count">105</h1>
                </div>
                <div class="Card">
                    <img src="/Content/Assets/documenticonsvg1.svg" />
